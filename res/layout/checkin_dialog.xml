<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/checkin_dialog_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center" >
        
        <ImageView
            android:id="@+id/checkin_line0"
            android:src="@drawable/nanboku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="画像"
            android:layout_weight="1"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/checkin_line1"
            android:src="@drawable/nanboku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="画像"
            android:layout_weight="1"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/checkin_line2"
            android:src="@drawable/nanboku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="画像"
            android:layout_weight="1"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/checkin_line3"
            android:src="@drawable/nanboku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="画像"
            android:layout_weight="1"
            android:visibility="invisible" />
        
    </LinearLayout>

</LinearLayout>